<Window x:Class="lab_21_wpf_hello_world.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_21_wpf_hello_world"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBestOrWorst" HorizontalAlignment="Left" Height="28" Margin="229,89,0,0" Text="Is Engineering 66 the best or worst group?" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" />
        <RadioButton x:Name="RadioGreat" Content="They're great" HorizontalAlignment="Left" Height="28" Margin="229,135,0,0" VerticalAlignment="Top" Width="111" IsChecked="True" />
        <RadioButton x:Name="RadioWorst" Content="They're the worst" HorizontalAlignment="Left" Height="28" Margin="367,135,0,0" VerticalAlignment="Top" Width="115" />
        <Button x:Name="ButtonConfirm" HorizontalAlignment="Left" Height="23" Margin="311,168,0,0" VerticalAlignment="Top" Width="79" Content="Confirm" Click="ButtonConfirm_Click"/>

    </Grid>
</Window>
